@model ICollection<DomainModel.Role>

<h3>Roles</h3>

@if (Model.Count > 0)
{
    <table class="table table-striped">
        <thead class="thead-light">
            <tr>
                <th scope="col">Character Name</th>
                <th scope="col">Actor Name</th>
                <th scope="col">Film</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.CharacterName</td>
                    <td><a asp-page="/Actor/Index" asp-route-actor="@role.ActorName">@role.ActorName</a></td>
                    <td><a asp-page="/Movie/Index" asp-route-movie="@role.Movie.Name">@role.Movie.Name</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No roles found.</p>
}